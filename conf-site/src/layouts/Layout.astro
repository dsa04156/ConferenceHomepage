---
import '../styles/global.css';
import { getCollection } from 'astro:content';
import { MENU_ITEMS } from '../config/menu';

interface Props {
	title: string;
	lang: 'ko' | 'en';
	year: string;
	menuLabels: Record<string, string>;
}

const { title, lang, year, menuLabels = {} } = Astro.props;

// Dynamically get available years from content collection
const allConferenceItems = await getCollection('conference');
const availableYears = [...new Set(allConferenceItems.map(item => item.data.year))].sort((a, b) => b.localeCompare(a));

// Helper to get the other language URL
const base = import.meta.env.BASE_URL;
const currentPath = Astro.url.pathname;

// Robust language switcher
const otherLang = lang === 'ko' ? 'en' : 'ko';
const otherLangLabel = lang === 'ko' ? 'English' : '한국어';

// Replace current lang with other lang in the path
// We need to be careful with the base path
let otherLangUrl = currentPath;
if (currentPath.includes(`/${lang}/`)) {
    otherLangUrl = currentPath.replace(`/${lang}/`, `/${otherLang}/`);
} else if (currentPath.endsWith(`/${lang}`)) {
    otherLangUrl = currentPath.replace(`/${lang}`, `/${otherLang}`);
}

// Function to construct URL respecting base
const getUrl = (path: string) => {
    // path should be like "2025/ko/..."
    const cleanPath = path.startsWith('/') ? path.slice(1) : path;
    // Ensure base ends with /
    const normalizedBase = base.endsWith('/') ? base : base + '/';
    return `${normalizedBase}${cleanPath}`;
};
---

<!doctype html>
<html lang={lang} class="scroll-smooth overflow-x-hidden">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Academic Conference Site" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href={getUrl('favicon.svg')} />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700&display=swap" rel="stylesheet">
        <!-- Pretendard via CDN or local is recommended for Korean, using system fallback for now or Google Fonts if available (Pretendard is usually custom) -->
        <link rel="stylesheet" as="style" crossorigin href="https://cdn.jsdelivr.net/gh/orioncactus/pretendard@v1.3.9/dist/web/static/pretendard.min.css" />
	</head>
	<body class="font-sans text-gray-800 bg-gray-50 flex flex-col min-h-screen overflow-x-hidden">
		<nav class="bg-white/95 backdrop-blur-md text-[#003366] shadow-sm sticky top-0 z-50 border-b border-gray-100 transition-all duration-300" id="main-nav">
			<div class="w-full px-2 sm:px-4 xl:px-8">
				<div class="flex items-center justify-between h-20">
					<!-- Logo / Brand -->
					<div class="flex-shrink-0 flex items-center pr-2">
						<a href={getUrl(`${year}/${lang}`)} class="group flex items-center gap-2">
                            <div class="w-8 h-8 sm:w-10 sm:h-10 bg-[#003366] text-white rounded-lg flex items-center justify-center font-bold text-lg sm:text-l shadow-md group-hover:bg-blue-800 transition-colors">
                                M
                            </div>
							<div class="flex flex-col">
                                <span class="text-2xl sm:text-3xl font-bold tracking-tight leading-none group-hover:text-blue-800 transition-colors">{title.includes(' - ') ? title.split(' - ').pop() : title}</span>
                            </div>
						</a>
					</div>

					<!-- Desktop Menu -->
					<div class="hidden 2xl:block">
						<div class="flex items-baseline space-x-1 whitespace-nowrap">
							{MENU_ITEMS.map((item) => (
                                item.children ? (
                                    <div class="relative group">
                                        <a 
                                            href={getUrl(`${year}/${lang}/${item.href}`)}
                                            class="px-1.5 2xl:px-2 py-2 rounded-md text-[15px] 2xl:text-base font-bold text-gray-700 hover:text-[#003366] hover:bg-blue-50 inline-flex items-center transition-all duration-200 group-hover:text-[#003366] uppercase tracking-tighter"
                                        >
                                            {(menuLabels && menuLabels[item.key]) || item.key}
                                            <svg class="w-3 h-3 ml-0.5 text-gray-400 group-hover:text-[#003366] transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path></svg>
                                        </a>
                                        <!-- Dropdown -->
                                        <div class="absolute left-0 mt-1 w-56 2xl:w-60 rounded-lg shadow-xl bg-white ring-1 ring-black ring-opacity-5 opacity-0 invisible group-hover:opacity-100 group-hover:visible transition-all duration-200 z-50 transform origin-top-left scale-95 group-hover:scale-100">
                                            <div class="py-1 2xl:py-2" role="menu" aria-orientation="vertical">
                                                {item.children.map((child) => (
                                                    child.children ? (
                                                        <div class="relative group/sub px-1 2xl:px-2">
                                                            <button class="w-full text-left block px-3 2xl:px-4 py-2 2xl:py-2.5 rounded-md text-[12px] 2xl:text-sm text-gray-700 hover:bg-blue-50 hover:text-[#003366] flex justify-between items-center font-medium transition-colors uppercase">
                                                                {(menuLabels && menuLabels[child.key]) || child.key}
                                                                <svg class="w-3 h-3 2xl:w-4 2xl:h-4 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path></svg>
                                                            </button>
                                                            <!-- Sub Dropdown -->
                                                            <div class="absolute left-full top-0 mt-0 w-56 2xl:w-60 rounded-lg shadow-xl bg-white ring-1 ring-black ring-opacity-5 opacity-0 invisible group-hover/sub:opacity-100 group-hover/sub:visible transition-all duration-200 z-50 ml-1">
                                                                <div class="py-1 2xl:py-2 px-1 2xl:px-2">
                                                                    {child.children.map((subChild) => (
                                                                        <a
                                                                            href={getUrl(`${year}/${lang}/${subChild.href}`)}
                                                                            class="block px-3 2xl:px-4 py-2 2xl:py-2.5 rounded-md text-[12px] 2xl:text-sm text-gray-700 hover:bg-blue-50 hover:text-[#003366] transition-colors uppercase"
                                                                        >
                                                                            {(menuLabels && menuLabels[subChild.key]) || subChild.key}
                                                                        </a>
                                                                    ))}
                                                                </div>
                                                            </div>
                                                        </div>
                                                    ) : (
                                                        <div class="px-1 2xl:px-2">
                                                            <a
                                                                href={getUrl(`${year}/${lang}/${child.href}`)}
                                                                class="block px-3 2xl:px-4 py-2 2xl:py-2.5 rounded-md text-[12px] 2xl:text-sm text-gray-700 hover:bg-blue-50 hover:text-[#003366] font-medium transition-colors uppercase"
                                                            >
                                                                {(menuLabels && menuLabels[child.key]) || child.key}
                                                            </a>
                                                        </div>
                                                    )
                                                ))}
                                            </div>
                                        </div>
                                    </div>
                                ) : (
                                    <a
                                        href={getUrl(`${year}/${lang}${item.href ? '/' + item.href : ''}`)}
                                        class="px-1.5 2xl:px-2 py-2 rounded-md text-[15px] 2xl:text-base font-bold text-gray-700 hover:text-[#003366] hover:bg-blue-50 transition-all duration-200 uppercase tracking-tighter"
                                    >
                                        {(menuLabels && menuLabels[item.key]) || item.key}
                                    </a>
                                )
							))}
                                                       <!-- Year Switcher -->
                            <div class="relative group ml-1 2xl:ml-4">
                                <button class="inline-flex items-center px-1.5 2xl:px-3 py-1 border border-gray-200 rounded-md text-[15px] 2xl:text-base font-medium text-gray-600 hover:text-[#003366] hover:border-[#003366] hover:bg-blue-50 transition-all">
                                    {year}
                                    <svg class="w-3 h-3 ml-1 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path></svg>
                                </button>
                                <div class="absolute right-0 mt-1 w-24 rounded-lg shadow-xl bg-white ring-1 ring-black ring-opacity-5 opacity-0 invisible group-hover:opacity-100 group-hover:visible transition-all duration-200 z-50">
                                    <div class="py-1">
                                        {availableYears.map((y) => (
                                            <a
                                                href={getUrl(`${y}/${lang}`)}
                                                class={`block px-4 py-2 text-sm ${y === year ? 'bg-blue-50 text-[#003366] font-bold' : 'text-gray-700 hover:bg-gray-50'}`}
                                            >
                                                {y}
                                            </a>
                                        ))}
                                    </div>
                                </div>
                            </div>

                            <!-- Language Switcher removed as only English is needed -->
						</div>
					</div>

					<!-- Mobile menu button (Visible on 2xl and below) -->
					<div class="-mr-2 flex 2xl:hidden">
						<button type="button" id="mobile-menu-btn" class="bg-white inline-flex items-center justify-center p-2 rounded-md text-gray-600 hover:text-[#003366] hover:bg-gray-100 focus:outline-none focus:ring-2 focus:ring-inset focus:ring-[#003366]" aria-controls="mobile-menu" aria-expanded="false">
							<span class="sr-only">Open main menu</span>
							<svg class="block h-6 w-6" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
								<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
							</svg>
							<svg class="hidden h-6 w-6" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
								<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
							</svg>
						</button>
					</div>
				</div>
			</div>

			<!-- Mobile menu -->
			<div class="hidden 2xl:hidden bg-white border-t border-gray-100 h-[calc(100vh-5rem)] overflow-y-auto shadow-inner fixed w-full left-0 top-20 z-40" id="mobile-menu">
				<div class="px-4 pt-4 pb-20 space-y-2">
					{MENU_ITEMS.map((item) => (
                        item.children ? (
                            <div class="space-y-1">
                                <a 
                                    href={getUrl(`${year}/${lang}/${item.href}`)}
                                    class="block font-bold text-[#003366] px-3 py-2 text-base hover:bg-blue-50 rounded-md"
                                >
                                    {(menuLabels && menuLabels[item.key]) || item.key}
                                </a>
                                <div class="pl-4 space-y-1 border-l-2 border-gray-100 ml-3">
                                    {item.children.map(child => (
                                        child.children ? (
                                            <div class="space-y-1">
                                                <div class="font-medium text-gray-800 px-3 py-2 text-sm">
                                                    {(menuLabels && menuLabels[child.key]) || child.key}
                                                </div>
                                                <div class="pl-4 space-y-1 border-l-2 border-gray-100 ml-3">
                                                    {child.children.map(subChild => (
                                                        <a
                                                            href={getUrl(`${year}/${lang}/${subChild.href}`)}
                                                            class="block px-3 py-2 rounded-md text-sm font-medium text-gray-600 hover:text-[#003366] hover:bg-blue-50"
                                                        >
                                                            - {(menuLabels && menuLabels[subChild.key]) || subChild.key}
                                                        </a>
                                                    ))}
                                                </div>
                                            </div>
                                        ) : (
                                            <a
                                                href={getUrl(`${year}/${lang}/${child.href}`)}
                                                class="block px-3 py-2 rounded-md text-sm font-medium text-gray-600 hover:text-[#003366] hover:bg-blue-50"
                                            >
                                                {(menuLabels && menuLabels[child.key]) || child.key}
                                            </a>
                                        )
                                    ))}
                                </div>
                            </div>
                        ) : (
                            <a
                                href={getUrl(`${year}/${lang}${item.href ? '/' + item.href : ''}`)}
                                class="block px-3 py-2 rounded-md text-base font-bold text-gray-700 hover:text-[#003366] hover:bg-blue-50"
                            >
                                {(menuLabels && menuLabels[item.key]) || item.key}
                            </a>
                        )
					))}
					<div class="pt-4 mt-4 border-t border-gray-100">
                        <div class="flex items-center space-x-2 px-3 py-2 border-b border-gray-100 mb-2">
                            <span class="text-sm font-medium text-gray-400 uppercase tracking-wider">Year:</span>
                            {availableYears.map((y) => (
                                <a
                                    href={getUrl(`${y}/${lang}`)}
                                    class={`px-3 py-1 rounded-md text-sm font-bold ${y === year ? 'bg-[#003366] text-white' : 'text-gray-600 bg-gray-100'}`}
                                >
                                    {y}
                                </a>
                            ))}
                        </div>
                    </div>
				</div>
			</div>
		</nav>
		
		<main class="flex-grow">
			<slot />
		</main>

		<footer class="bg-gray-900 text-gray-400 py-12 mt-12 border-t border-gray-800">
			<div class="max-w-7xl mx-auto px-4 text-center">
				<slot name="footer-content" />
			</div>
		</footer>

		<script>
			const btn = document.getElementById('mobile-menu-btn');
			const menu = document.getElementById('mobile-menu');

			if (btn && menu) {
				btn.addEventListener('click', () => {
					const expanded = btn.getAttribute('aria-expanded') === 'true';
					btn.setAttribute('aria-expanded', (!expanded).toString());
					menu.classList.toggle('hidden');
					
					// Toggle icon
					const svgs = btn.querySelectorAll('svg');
					svgs.forEach(svg => svg.classList.toggle('hidden'));
				});
			}
		</script>
	</body>
</html>

<style is:global>
	:root {
		--font-inter: 'Inter', sans-serif;
		--font-pretendard: 'Pretendard', sans-serif;
	}
	html {
		font-family: var(--font-pretendard), var(--font-inter), system-ui, sans-serif;
	}
    h1, h2, h3, h4, h5, h6 {
        font-family: var(--font-inter), var(--font-pretendard), sans-serif;
    }
</style>
