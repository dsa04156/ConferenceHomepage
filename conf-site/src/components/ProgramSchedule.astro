---
interface ProgramSession {
    time: string;
    title: string;
    speaker?: string;
    location?: string;
    note?: string;
}

interface ProgramDay {
    dateLabel: string;
    sessions: ProgramSession[];
}

interface Props {
    days: ProgramDay[];
    title?: string;
}

const { days, title = "Program Schedule" } = Astro.props;
---

<div class="space-y-8">
    <h2
        class="text-3xl font-bold text-gray-900 mb-6 border-b-2 border-blue-900 pb-2 inline-block"
    >
        {title}
    </h2>

    <div class="space-y-6">
        {
            days.map((day) => (
                <section class="bg-white rounded-2xl shadow-xl border border-gray-100 overflow-hidden">
                    <div class="bg-[#1a3050] px-6 py-4">
                        <h3 class="text-white font-bold uppercase tracking-widest text-sm">
                            {day.dateLabel}
                        </h3>
                    </div>
                    <div class="divide-y divide-gray-100">
                        {day.sessions.map((session) => (
                            <div class="px-6 py-5 flex flex-col md:flex-row md:items-start md:gap-6">
                                <div class="text-blue-700 font-bold text-sm uppercase tracking-widest md:w-40">
                                    {session.time}
                                </div>
                                <div class="flex-1">
                                    <h4 class="text-lg font-semibold text-gray-900">
                                        {session.title}
                                    </h4>
                                    {session.speaker && (
                                        <p class="text-sm text-gray-600 mt-1">
                                            {session.speaker}
                                        </p>
                                    )}
                                    {(session.location || session.note) && (
                                        <div class="text-xs text-gray-500 mt-2 flex flex-wrap gap-3">
                                            {session.location && (
                                                <span class="inline-flex items-center">
                                                    <span class="font-semibold mr-1">
                                                        Location:
                                                    </span>
                                                    {session.location}
                                                </span>
                                            )}
                                            {session.note && (
                                                <span class="inline-flex items-center">
                                                    <span class="font-semibold mr-1">
                                                        Note:
                                                    </span>
                                                    {session.note}
                                                </span>
                                            )}
                                        </div>
                                    )}
                                </div>
                            </div>
                        ))}
                    </div>
                </section>
            ))
        }
    </div>
</div>
