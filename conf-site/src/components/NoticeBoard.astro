---
interface NoticeItem {
  date: string;
  title: string;
  link?: string;
  isNew?: boolean;
  content?: string;
  image?: string;
}

interface Props {
  notices: NoticeItem[];
  title?: string;
  seeAllLink?: string;
  anchorPrefix?: string;
  showContent?: boolean;
}

const {
  notices = [],
  title = "News & Notice",
  seeAllLink,
  anchorPrefix = "notice-",
  showContent = false,
} = Astro.props;

const base = import.meta.env.BASE_URL;
const getAssetUrl = (path: string) => {
  if (!path) return "";
  if (path.startsWith("http")) return path;
  const normalizedBase = base.endsWith("/") ? base : base + "/";
  const cleanPath = path.startsWith("/") ? path.slice(1) : path;
  return `${normalizedBase}${encodeURI(cleanPath)}`;
};
---

<div
  class="bg-white shadow-xl rounded-xl overflow-hidden border border-gray-200"
>
  <div class="bg-[#1a3050] px-6 py-4 flex justify-between items-center">
    <h3 class="text-xl font-bold text-white flex items-center">
      <svg
        xmlns="http://www.w3.org/2000/svg"
        class="h-6 w-6 mr-2 text-blue-400"
        fill="none"
        viewBox="0 0 24 24"
        stroke="currentColor"
      >
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="M15 17h5l-1.405-1.405A2.032 2.032 0 0118 14.158V11a6.002 6.002 0 00-4-5.659V5a2 2 0 10-4 0v.341C7.67 6.165 6 8.388 6 11v3.159c0 .538-.214 1.055-.595 1.436L4 17h5m6 0v1a3 3 0 11-6 0v-1m6 0H9"
        ></path>
      </svg>
      {title}
    </h3>
    {seeAllLink && (
      <a
        href={seeAllLink}
        class="text-sm text-blue-200 hover:text-white font-medium transition-colors"
        >See All &rarr;</a
      >
    )}
  </div>

  {showContent ? (
    <div class="p-5 sm:p-6 space-y-6">
      {notices.length > 0 ? (
        notices.map((item, index) => (
          <article
            id={`${anchorPrefix}${String(notices.length - index).padStart(2, "0")}`}
            class="rounded-2xl border border-gray-200 bg-white shadow-sm hover:shadow-lg transition-shadow overflow-hidden"
          >
            {item.image && (
              <div class="bg-gray-100">
                <img
                  src={getAssetUrl(item.image)}
                  alt={item.title}
                  class="w-full h-64 sm:h-72 object-cover"
                />
              </div>
            )}
            <div class="px-5 sm:px-6 py-5">
              <div class="flex items-center justify-between gap-3">
                {item.link ? (
                  <a
                    href={item.link}
                    class="text-lg font-bold text-gray-900 hover:text-blue-700 transition-colors"
                  >
                    {item.title}
                  </a>
                ) : (
                  <h3 class="text-lg font-bold text-gray-900">{item.title}</h3>
                )}
                <div class="text-xs text-gray-500 font-medium whitespace-nowrap">
                  {item.date}
                </div>
              </div>
              {item.content && (
                <p class="mt-3 text-sm sm:text-[15px] text-gray-700 leading-relaxed">
                  {item.content}
                </p>
              )}
            </div>
          </article>
        ))
      ) : (
        <div class="px-6 py-10 text-center text-gray-500">
          No notices published yet.
        </div>
      )}
    </div>
  ) : (
    <div class="overflow-x-auto">
      <table class="w-full text-left border-collapse">
        <thead>
          <tr class="bg-gray-50 border-b border-gray-100">
            <th
              class="px-6 py-3 text-xs font-bold text-gray-500 uppercase tracking-wider w-16 text-center"
              >No.</th
            >
            <th
              class="px-6 py-3 text-xs font-bold text-gray-500 uppercase tracking-wider"
              >Title</th
            >
            <th
              class="px-6 py-3 text-xs font-bold text-gray-500 uppercase tracking-wider w-32 text-center"
              >Date</th
            >
          </tr>
        </thead>
        <tbody class="divide-y divide-gray-100">
          {
            notices.length > 0 ? (
              notices.map((item, index) => (
                <tr
                  id={`${anchorPrefix}${String(notices.length - index).padStart(2, "0")}`}
                  class="hover:bg-blue-50/30 transition-colors group"
                >
                  <td class="px-6 py-4 text-sm text-gray-400 text-center font-mono">
                    <div class="flex items-center justify-center gap-2">
                      <span>{String(notices.length - index).padStart(2, "0")}</span>
                      {item.isNew && (
                        <span class="inline-flex items-center px-1.5 py-0.5 rounded text-[10px] font-bold bg-red-500 text-white animate-pulse">
                          NEW
                        </span>
                      )}
                    </div>
                  </td>
                  <td class="px-6 py-4">
                    <div class="flex items-center">
                      {item.link ? (
                        <a
                          href={item.link}
                          class="text-gray-900 font-semibold hover:text-blue-700 transition-colors block"
                        >
                          {item.title}
                        </a>
                      ) : (
                        <span class="text-gray-900 font-semibold block">
                          {item.title}
                        </span>
                      )}
                    </div>
                  </td>
                  <td class="px-6 py-4 text-sm text-gray-500 text-center font-medium">
                    {item.date}
                  </td>
                </tr>
              ))
            ) : (
              <tr>
                <td colspan="3" class="px-6 py-10 text-center text-gray-500">
                  No notices published yet.
                </td>
              </tr>
            )
          }
        </tbody>
      </table>
    </div>
  )}
</div>
